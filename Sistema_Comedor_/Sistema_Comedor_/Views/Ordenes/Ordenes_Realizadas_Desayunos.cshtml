@model List<Sistema_Comedor_.Desayunos>

@{
    ViewBag.Title = "Ordenes_Realizadas_Desayunos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Lista de pedidos -- Desayunos</h2>
<br />
<div class="Salir">
    <button class="btn btn-success" type="button" onclick="document.location.href='@Url.Action("Desayunos","Home")'">
        Volver al menu
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-reply-fill" viewBox="0 0 16 16">
            <path d="M5.921 11.9 1.353 8.62a.719.719 0 0 1 0-1.238L5.921 4.1A.716.716 0 0 1 7 4.719V6c1.5 0 6 0 7 8-2.5-4.5-7-4-7-4v1.281c0 .56-.606.898-1.079.62z" />
        </svg>
    </button>
</div>
<style>
    .Agregar{
        position:relative;
        bottom:150px;
    }
</style>
<div class="Agregar">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" onclick="document.location.href='@Url.Action("Agregar_Desayuno","Operaciones")'">
        Agregar empleado
    </button>
</div>
<style>
    .Salir {
        position: relative;
        left: 1000px;
        bottom: 120px;
    }
</style>
<div class="container">
    <div class="row">
        <table id="myTabla" class="display">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre del platillo</th>
                    <th>Precio del platillo $</th>
                    <th>Modificar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            @{
                foreach (var odatos in Model)
                {
                    <tbody>
                        <tr>
                            <td>@odatos.Id</td>
                            <td>@odatos.Nombre_Plato</td>
                            <td>@odatos.Precio</td>
                            <td>
                                <button class="btn btn-warning" onclick="document.location.href='@Url.Action("Actualizar_Desayuno","Operaciones")'">
                                    Modificar
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                        <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                                    </svg>
                                </button>
                            </td>
                            <td>
                                <button class="btn btn-danger" onclick="document.location.href='@Url.Action("Eliminar_Desayuno","Operaciones")'">
                                    Eliminar
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-octagon" viewBox="0 0 16 16">
                                        <path d="M4.54.146A.5.5 0 0 1 4.893 0h6.214a.5.5 0 0 1 .353.146l4.394 4.394a.5.5 0 0 1 .146.353v6.214a.5.5 0 0 1-.146.353l-4.394 4.394a.5.5 0 0 1-.353.146H4.893a.5.5 0 0 1-.353-.146L.146 11.46A.5.5 0 0 1 0 11.107V4.893a.5.5 0 0 1 .146-.353L4.54.146zM5.1 1 1 5.1v5.8L5.1 15h5.8l4.1-4.1V5.1L10.9 1H5.1z" />
                                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                                    </svg>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                }
            }
        </table>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#myTabla').DataTable();
        });
    </script>
}
