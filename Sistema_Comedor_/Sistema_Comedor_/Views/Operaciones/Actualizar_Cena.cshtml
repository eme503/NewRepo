
@{
    ViewBag.Title = "Actualizar_Cena";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Actualizar Cena</h2>
<br />
<style>
    .Logo {
        position: relative;
        left: 10px;
    }

    h2 {
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }
</style>
<div class="Logo">
    <div class="container">
        <img src="~/Content/Img/Logo.png" width="190" />
    </div>
</div>
<br />
<div class="container">
    <div class="row">
        <form action="@Url.Action("Actualizar_Cena","Operaciones")" method="post">
            Id: <input type="text" name="Id" class="text-success" />
            <br />
            <br />
            Nombre del platillo: <input type="text" name="Nombre_Plato" class="text-success" />
            <br />
            <br />
            Precio: <input type="text" name="Precio" class="text-success" />
            <br />
            <br />
            <input type="submit" class="btn btn-primary" value="Agregar" />
        </form>
    </div>
</div>




