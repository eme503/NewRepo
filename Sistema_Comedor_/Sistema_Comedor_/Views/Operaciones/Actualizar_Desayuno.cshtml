@model Sistema_Comedor_.Desayunos
@{
    ViewBag.Title = "Actualizar_Desayuno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Actualizar Desayuno</h2>
<br />
<style>
    .Logo {
        position: relative;
        left: 10px;
    }

    h2 {
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }
</style>
<div class="Logo">
    <div class="container">
        <img src="~/Content/Img/Logo.png" width="190" />
    </div>
</div>
<br />
<div class="container">
    <div class="row">
        @using (Html.BeginForm("Actualizar_Desayuno", "Operaciones", FormMethod.Post, new { role = "form", @class = "" }))
        {
            @Html.LabelFor(d => d.Id)
            @Html.TextBoxFor(d => d.Id, new { @class = "form-control" })//Para poner atributos html
            @Html.ValidationMessage("Id", new { @class = "text-danger" })

            //Sirve para que el usuario no haga peticiones de fuera
            @Html.AntiForgeryToken()
            //Cuando yo tenga un error se muestra
            @Html.ValidationMessage("error", new { @class = "text-danger" })

            @Html.LabelFor(d => d.Nombre_Plato)//Especificamos el campos
            @Html.TextBoxFor(d => d.Nombre_Plato, new { @class = "form-control" })//Para poner atributos html
            @Html.ValidationMessage("Nombre del platillo", new { @class = "text-danger" })

            @Html.LabelFor(d => d.Precio)//Especificamos el campos
            @Html.TextBoxFor(d => d.Precio, new { @class = "form-control" })//Para poner atributos html
            @Html.ValidationMessage("Precio del platillo", new { @class = "text-danger" })
            <br />
            <br />
            <input type="submit" class="btn btn-success" value="Guardar" />
        }
    </div>
</div>


